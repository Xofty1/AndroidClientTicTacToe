<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTheme">
        <attr name="text" format="color" />
    </declare-styleable>

    <style name="Theme.TIcTacToe" parent="Theme.AppCompat.Light.DarkActionBar" />

    <style name="Theme.TIcTacToe.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar" />


    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryDark</item>
        <item name="colorOnBackground">@color/colorOnBackgroundDark</item>

        <!-- Дополнительные параметры -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorBackgroundDark</item>
        <item name="text">@color/colorTextDark</item>
    </style>


</resources>